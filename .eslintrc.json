{
  "extends": ["next/core-web-vitals",  "prettier"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "@next/next/no-page-custom-font": "off",
    "no-console": "error",
    "indent": ["error", 2],
    "semi": [2, "always"],
    "jsx-quotes":[
      "error",
      "prefer-double"
    ],
    "max-len": [
      "error",
      {
        "code": 160,
        "ignoreUrls": true,
        "tabWidth": 2
      }
    ],
    "import/order": [
      "error",
      {
        "newlines-between": "always-and-inside-groups",
        "groups": [
          ["builtin", "external"],
          [
            "internal",
            "parent",
            "sibling",
            "index",
            "object"
          ]
        ]
      }
    ],
    "object-curly-spacing": ["error", "always"],
    "no-trailing-spaces": "error"
  }
}
